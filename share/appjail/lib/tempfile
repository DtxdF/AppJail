lib_load "${LIBDIR}/random"
lib_load "${LIBDIR}/sysexits"

lib_generate_tempfile()
{
	mkdir -p "${TMPDIR}" || exit $?

	local tempfile
	tempfile=`TMPDIR="${TMPDIR}" mktemp -t appjail` || exit $?

	echo -n > "${tempfile}" || exit $?
	printf "%s\n" "${tempfile}"
}

lib_generate_tempdir()
{
	mkdir -p "${TMPDIR}" || exit $?

	local tempdir
	tempdir=`TMPDIR="${TMPDIR}" mktemp -d -t appjail` || exit $?

	printf "%s\n" "${tempdir}"
}

lib_generate_fifo()
{
	local fifo_filename=`random_hexstring 48 0 15 | tr -d '\n'`
	fifo_filename="${fifo_filename}.fifo"
	fifo_filename="${TMPDIR}/${fifo_filename}"

	mkfifo -m 660 "${fifo_filename}" || exit $?

	printf "%s\n" "${fifo_filename}"
}
