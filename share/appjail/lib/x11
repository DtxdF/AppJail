lib_load "${LIBDIR}/select"
lib_load "${LIBDIR}/strlen"

lib_x11_get_available_display()
{
	case "${X11_ASSIGN_ALGO}" in
		fsmn) lib_select_find_smallest_missing_number `lib_x11_showalldisplays` ;;
		fnfs) lib_select_find_number_from_start "${X11_FNFS}" `lib_x11_showalldisplays` ;;
		*) lib_err ${EX_CONFIG} -- "${X11_ASSIGN_ALGO}: Invalid algorithm." ;;
	esac
}

lib_x11_showalldisplays()
{
	local displays

	displays=`lib_x11_showdisplays && lib_x11_get_assigned_displays` || exit $?
	displays=`printf "%s\n" "${displays}" | sort -n | uniq` || exit $?

	echo "${displays}"
}

lib_x11_get_assigned_displays()
{
	local jail

	if [ ! -d "${JAILDIR}" ] || [ `lib_countfiles "${JAILDIR}"` -eq 0 ]; then
		return
	fi

	for jail in "${JAILDIR}/"*; do
		jail="${jail##*/}"

		local display_file="${JAILDIR}/${jail}/conf/boot/x11/display"

		if [ ! -f "${display_file}" ]; then
			continue
		fi

		local display=`head -1 -- "${display_file}" 2> /dev/null`

		printf "%s\n" "${display}"
	done

	return 0
}

lib_x11_showdisplays()
{
	[ -d "/tmp/.X11-unix" ] && ls -A "/tmp/.X11-unix" 2> /dev/null | sed -Ee 's/^X([0-9]+)$/\1/'

	return 0
}
