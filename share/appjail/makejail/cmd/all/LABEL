. "${AJ_CONFIG}"
. "${LIBDIR}/load"

lib_load "${LIBDIR}/log"
lib_load "${LIBDIR}/check_func"
lib_load "${LIBDIR}/replace"

main()
{
	local label="$1"
	if lib_check_empty "${label}"; then
		lib_err ${EX_USAGE} "usage: LABEL <key>=<value>"
	fi

	local key value

	key=`lib_jailparam_name "${label}" =`

	if ! lib_check_labelname "${key}"; then
		lib_err ${EX_DATAERR} "Invalid label name '${key}'"
	fi

	value=`lib_jailparam_value "${label}" =`

	local escape_chars
	escape_chars='`"\'

	key=`lib_escape_string "${key}" "" "${escape_chars}"`

	if ! lib_check_empty "${value}"; then
		value=`lib_escape_string "${value}" "" "${escape_chars}"`
	fi

	echo "\${APPJAIL_SCRIPT} label add \"\${APPJAIL_JAILNAME}\" \"${key}\" \"${value}\""
}

main "$@"
