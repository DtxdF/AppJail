. "${AJ_CONFIG}"
. "${LIBDIR}/load"

lib_load "${LIBDIR}/log"
lib_load "${LIBDIR}/check_func"
lib_load "${LIBDIR}/jail"
lib_load "${LIBDIR}/replace"

main()
{
	local rulespec="$1"
	if lib_check_empty "${rulespec}"; then
		lib_err ${EX_USAGE} "usage: DEVICE <rulespec> ..."
	fi

	local escape_chars
	escape_chars='`"'

	printf "%s" "\"\${APPJAIL_SCRIPT}\" devfs apply -- \"\${APPJAIL_JAILNAME}\" "

	local args_list
	args_list=`lib_split_jailparams "${rulespec}"` || exit $?

	printf "%s\n" "${args_list}" | while IFS= read -r apply_arg
	do
		if ! lib_check_empty "${apply_arg}"; then
			apply_arg=`lib_escape_string "${apply_arg}" "" "${escape_chars}"`
		fi

		printf "%s " "\"${apply_arg}\""
	done
	echo

	local escape_rulespec
	escape_rulespec=`lib_escape_string "${rulespec}" "" "${escape_chars}"`

	printf "%s\n" "\"\${APPJAIL_SCRIPT}\" devfs set -- \"\${APPJAIL_JAILNAME}\" \"${escape_rulespec}\""
}

main "$@"
