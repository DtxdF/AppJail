lib_load "${LIBDIR}/colors"
lib_load "${LIBDIR}/check_func"
lib_load "${LIBDIR}/jail"
lib_load "${LIBDIR}/random"

service_desc="Control (start/stop/etc.) or list system services within a jail."

service_main()
{
	local entity="$1"; shift
	if lib_check_empty "${entity}"; then
		service_usage
		exit ${EX_USAGE}
	fi

	case "${entity}" in
		all|jail) ;;
		*) service_usage; exit ${EX_USAGE} ;;
	esac

	service_${entity} "$@"
}

service_all()
{
	local _o
	local opt_failsafe=0
	local input_file="/dev/null"
	local jail_name
	local errlevel=0

	if [ $# -eq 0 ]; then
		service_usage
		exit ${EX_USAGE}
	fi

	while getopts ":ei:" _o; do
		case "${_o}" in
			e)
				opt_failsafe=1
				;;
			i)
				input_file="${OPTARG}"
				;;
			*)
				service_usage
				exit ${EX_USAGE}
				;;
		esac
	done
	shift $((OPTIND-1))

	"${APPJAIL_PROGRAM}" jail list -HIpt name | while IFS= read -r jail_name
	do
		lib_set_logprefix " [`random_color`${jail_name}${COLOR_DEFAULT}]"
		
		lib_debug "service(8) args: $@"

		(service_jail "${jail_name}" "$@" < "${input_file}")

		errlevel=$?

		if [ ${errlevel} -ne 0 ]; then
			if [ ${opt_failsafe} -eq 1 ]; then
				lib_err ${errlevel} "Stop caused by a non-zero value."
			fi
		fi
	done
}

service_jail()
{
	local _o
	local opt_j_flag=false

	while getopts ":j" _o; do
		case "${_o}" in
			j)
				opt_j_flag=true
				;;
			*)
				service_usage
				exit ${EX_USAGE}
				;;
		esac
	done
	shift $((OPTIND-1))
	
	local jail_name

	jail_name="$1"; shift
	if [ -z "${jail_name}" ]; then
		service_usage
		exit ${EX_USAGE}
	fi

	if ! lib_check_jailname "${jail_name}"; then
		lib_err ${EX_DATAERR} "Invalid jail name \"${jail_name}\""
	fi

	if ${opt_j_flag}; then
		"${APPJAIL_PROGRAM}" cmd jexec "${jail_name}" \
			service "$@"
	else
		"${APPJAIL_PROGRAM}" cmd local "${jail_name}" \
			service -j "${jail_name}" "$@"
	fi
}

service_help()
{
	man 1 appjail-service
}

service_usage()
{
	cat << EOF
usage: service all [-e] [-i <file>] [--] [<args> ...]
       service jail [-j] <jail> [<args> ...]
EOF
}
