usage_desc="Display the syntax of a given command."

usage_main()
{
	usage_for "$1"
}

usage_for()
{
	local cmd

	cmd="$1"
	if [ -z "${cmd}" ]; then
		usage_usage
		exit ${EX_USAGE}
	fi

	if [ ! -x "${COMMANDS}/${cmd}" ]; then
		lib_err ${EX_NOINPUT} "Command \"${cmd}\" does not exist."
	fi

	lib_load "${COMMANDS}/${cmd}"

	if ! lib_check_func "${cmd}_usage"; then
		lib_err ${EX_SOFTWARE} "${cmd}_usage function does not exist in the ${cmd} command."
	fi

	${cmd}_usage
}

usage_help()
{
	man 1 appjail-usage
}

usage_usage()
{
	echo "usage: usage <command>"
}
