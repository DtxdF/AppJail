lib_load "${LIBDIR}/check_func"
lib_load "${LIBDIR}/zfs"

zfs_desc="Wrapper for common ZFS commands."

zfs_main()
{
	if [ "${ENABLE_ZFS}" = "0" ]; then
		lib_err ${EX_CONFIG} "zfs is not enabled in the configuration file. The zfs command cannot be used."
	fi

	local entity="$1"; shift
	if lib_check_empty "${entity}"; then
		zfs_usage
		exit ${EX_USAGE}
	fi

	local jail_name="$1"; shift
	if lib_check_empty "${jail_name}"; then
		zfs_usage
		exit ${EX_USAGE}
	fi

	local dataset="${ZPOOL}/${ZROOTFS}/${ZFS_JAILS_NAME}/${jail_name}"

	case "${entity}" in
		clone-src)
			local dst="$1"; shift
			if lib_check_empty "${dst}"; then
				zfs_usage
				exit ${EX_USAGE}
			fi

			zfs clone "$@" "${dataset}" "${dst}"
			;;
		clone-dst)
			local src="$1"; shift
			if lib_check_empty "${src}"; then
				zfs_usage
				exit ${EX_USAGE}
			fi

			zfs clone "$@" "${src}" "${dataset}"
			;;
		create|destroy|get|inherit|list|recv|send|set|snapshot)
			zfs ${entity} "$@" "${dataset}"
			;;
		*) 
			zfs_usage
			exit ${EX_USAGE}
			;;
	esac

}

zfs_help()
{
	cat << EOF
`zfs_usage`

${zfs_desc}

Parameters:
    clone-src        -- Use {jail_name} as the source of a clone. See zfs-clone(8).
    clone-dst        -- Use {jail_name} as the destination of a clone. See zfs-clone(8).
    create           -- See zfs-create(8).
    destroy          -- See zfs-destroy(8).
    get              -- See zfs-get(8).
    inherit          -- See zfs-set(8).
    list             -- See zfs-list(8).
    recv             -- See zfs-receive(8).
    send             -- See zfs-send(8).
    set              -- See zfs-set(8).
    snapshot         -- See zfs-snapshot(8).

EOF
}

zfs_usage()
{
	cat << EOF
usage: zfs clone-src jail_name dst [args ...]
       zfs clone-dst jail_name src [args ...]
       zfs create jail_name [args ...]
       zfs destroy jail_name [args ...]
       zfs get jail_name [args ...]
       zfs inherit jail_name [args ...]
       zfs list jail_name [args ...]
       zfs recv jail_name [args ...]
       zfs send jail_name [args ...]
       zfs set jail_name [args ...]
       zfs snapshot jail_name [args ...]
EOF
}
